<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_creature_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/row_creature_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_text" />

    <TextView
        android:id="@+id/row_creature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_creature_image"
        android:text="Creature Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/row_creature_level"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_level"
        android:gravity="center"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/row_creature_exp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_creature_image"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/row_creature_image"
        android:progress="40" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/row_creature_name"
        android:layout_below="@+id/row_creature_name"
        android:src="@drawable/icon_food" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_health" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/row_creature_image"
        android:src="@drawable/icon_happiness" />

    <ProgressBar
        android:id="@+id/row_creature_food"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/row_creature_name"
        android:layout_toRightOf="@+id/imageView2"
        android:padding="3dp"
        android:progress="20"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <ProgressBar
        android:id="@+id/row_creature_health"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/row_creature_food"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:padding="3dp"
        android:progress="56"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <ProgressBar
        android:id="@+id/row_creature_happiness"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/row_creature_health"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView4"
        android:padding="3dp"
        android:progress="80"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <TextView
        android:id="@+id/row_creature_food_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/row_creature_health"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="300/1200"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/row_creature_health_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/row_creature_happiness"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="200/500"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/row_creature_happiness_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/row_creature_happiness"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="300/400"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/row_creature_type_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/row_creature_level"
        android:src="@drawable/icon_empty" />

    <ImageView
        android:id="@+id/row_creature_selected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/row_creature_image"
        android:src="@drawable/icon_empty" />

    <ImageView
        android:id="@+id/row_creature_type_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/row_creature_type_1"
        android:src="@drawable/icon_empty" />

</RelativeLayout>
