<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE1" >

    <TextView
        android:id="@+id/row_shop_object_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView2"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/row_shop_object_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/row_shop_object_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_shop_object_image"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/row_shop_object_quantity"
        android:layout_toRightOf="@+id/row_shop_object_image"
        android:gravity="center"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_shop_object_image"
        android:src="@drawable/icon_coin" />

    <TextView
        android:id="@+id/row_shop_object_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/row_shop_object_name"
        android:layout_alignBottom="@+id/row_shop_object_name"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_title_3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="x0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
