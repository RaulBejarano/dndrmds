<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD2ECCFA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <Button
        android:id="@+id/main_login_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/green_button"
        android:text="Log In" />

    <EditText
        android:id="@+id/main_password_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/main_login_button"
        android:layout_alignLeft="@+id/main_login_button"
        android:layout_toLeftOf="@+id/main_password_forgot"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/main_user_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/main_password_text"
        android:layout_alignLeft="@+id/main_password_text"
        android:layout_toLeftOf="@+id/main_user_new"
        android:ems="10"
        android:hint="User"
        android:lines="1"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_user_text"
        android:layout_alignLeft="@+id/main_user_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_dandremids" />

    <ImageButton
        android:id="@+id/main_user_new"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/main_login_button"
        android:layout_alignTop="@+id/main_user_text"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_signup" />

    <ImageButton
        android:id="@+id/main_password_forgot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/main_user_new"
        android:layout_below="@+id/main_user_new"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_interrogation" />

</RelativeLayout>
