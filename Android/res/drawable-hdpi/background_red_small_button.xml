<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FE2E2E" />
            <stroke
                android:width="1dp"
                android:color="#DF0101" />
            <corners
                android:radius="3dp" />
          
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FE2E2E"
                android:endColor="#DF0101"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#DF0101" />
            <corners
                android:radius="10dp" />
            
        </shape>
    </item>
</selector>
